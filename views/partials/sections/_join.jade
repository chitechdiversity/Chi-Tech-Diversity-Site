.Join-slack#join-us-on-slack
  .Join-form
    form(action='/invite', method='POST')
      fieldset
        div.Join-email#enter-email
          div.loader
          input#email(type='email', name='email', required)
          div.indicator(data-content="Email")
        div#terms
          div.Terms
            .container
              section
                span please review and agree to the
                .morph-button.morph-button-overlay.morph-button-fixed
                  button(type='button') Code of Conduct
                  .morph-content
                    div
                      .content-style-overlay
                        span.fa.fa-close.icon.icon-close
                        include ../_coc.jade

        div#verify-human
          div#recaptcha-overlay
          div#recaptcha(class="g-recaptcha" data-callback="isHuman" data-sitekey="6Lc1NBgTAAAAAK0u6KHdA3wm-DyzrFcA2J87RpUs")
        div#joinButton
          button(type='submit') Click to Join!
